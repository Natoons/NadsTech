@inherits LayoutComponentBase

<div class="min-h-screen bg-gray-50 dark:bg-gray-900 transition-colors">
    <!-- Header -->
    <header class="bg-white dark:bg-gray-800 shadow-sm border-b border-gray-200 dark:border-gray-700">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <div class="flex items-center">
                    <a href="/" class="text-2xl font-bold text-gray-900 dark:text-white">
                        <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                            NadsTech
                        </span>
                    </a>
                </div>

                <!-- Navigation -->
                <nav class="hidden md:flex space-x-8">
                    <a href="/" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 px-3 py-2 text-sm font-medium transition-colors">
                        Accueil
                    </a>
                    <a href="/articles" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 px-3 py-2 text-sm font-medium transition-colors">
                        Articles
                    </a>
                    <a href="/about" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 px-3 py-2 text-sm font-medium transition-colors">
                        À propos
                    </a>
                </nav>

                <!-- Actions -->
                <div class="flex items-center space-x-4">
                    <ThemeToggle />
                    
                    <!-- Mobile menu button -->
                    <button @onclick="ToggleMobileMenu" class="md:hidden p-2 rounded-lg bg-gray-100 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors">
                        <svg class="w-5 h-5 text-gray-700 dark:text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
                        </svg>
                    </button>
                </div>
            </div>

            <!-- Mobile menu -->
            @if (isMobileMenuOpen)
            {
                <div class="md:hidden">
                    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 border-t border-gray-200 dark:border-gray-700">
                        <a href="/" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 block px-3 py-2 text-base font-medium transition-colors">
                            Accueil
                        </a>
                        <a href="/articles" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 block px-3 py-2 text-base font-medium transition-colors">
                            Articles
                        </a>
                        <a href="/about" class="text-gray-700 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 block px-3 py-2 text-base font-medium transition-colors">
                            À propos
                        </a>
                    </div>
                </div>
            }
        </div>
    </header>

    <!-- Main content -->
    <main class="flex-1">
        @Body
    </main>

    <!-- Footer -->
    <footer class="bg-white dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div>
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                        <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                            NadsTech
                        </span>
                    </h3>
                    <p class="text-gray-600 dark:text-gray-300">
                        Blog tech avec analyses IA pour comprendre l'actualité technologique.
                    </p>
                </div>
                <div>
                    <h4 class="text-sm font-semibold text-gray-900 dark:text-white mb-4">Navigation</h4>
                    <ul class="space-y-2">
                        <li><a href="/" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Accueil</a></li>
                        <li><a href="/articles" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">Articles</a></li>
                        <li><a href="/about" class="text-gray-600 dark:text-gray-300 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">À propos</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-sm font-semibold text-gray-900 dark:text-white mb-4">Contact</h4>
                    <p class="text-gray-600 dark:text-gray-300">
                        Suivez-nous pour les dernières actualités tech.
                    </p>
                </div>
            </div>
            <div class="mt-8 pt-8 border-t border-gray-200 dark:border-gray-700 text-center">
                <p class="text-gray-500 dark:text-gray-400">
                    © 2025 NadsTech. Tous droits réservés.
                </p>
            </div>
        </div>
    </footer>
</div>

<!-- Error UI -->
<div id="blazor-error-ui" data-nosnippet class="fixed inset-0 bg-red-600 text-white p-4 z-50 flex items-center justify-center">
    <div class="text-center">
        <p class="mb-4">Une erreur inattendue s'est produite.</p>
        <a href="." class="bg-white text-red-600 px-4 py-2 rounded-lg hover:bg-gray-100 transition-colors">Recharger</a>
        <button class="ml-4 text-white hover:text-gray-200" onclick="this.parentElement.parentElement.parentElement.style.display='none'">🗙</button>
    </div>
</div>

@code {
    private bool isMobileMenuOpen = false;

    private void ToggleMobileMenu()
    {
        isMobileMenuOpen = !isMobileMenuOpen;
    }
}
